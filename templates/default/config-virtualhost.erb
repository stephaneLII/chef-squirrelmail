<VirtualHost *:80>
        ServerAdmin webmaster@localhost
	Servername <%= node['chef-squirrelmail']['virtualhost_name'] %>

	Redirect / https:/<%= node['chef-squirrelmail']['virtualhost_name'] %>/

        ErrorLog ${APACHE_LOG_DIR}/<%= node['chef-squirrelmail']['virtualhost_name'] %>-error.log

        # Possible values include: debug, info, notice, warn, error, crit,
        # alert, emerg.
        LogLevel warn

       CustomLog ${APACHE_LOG_DIR}/<%= node['chef-squirrelmail']['virtualhost_name'] %>-access.log combined

        
</VirtualHost>

